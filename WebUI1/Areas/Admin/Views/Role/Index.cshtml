@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@section Link{<link href="~/admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">}
<a href="/admin/role/create" class="btn btn-info w-100 mb-2">Create</a>
<table class="table table-bordered  " id="dataTable"width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>#</th>
            <th>Role</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.Name == "Yaradici")
                {
                    break;
                }
                else
                {
                    <td>#</td>
                    <td>@item.Name</td>
                    <td>#</td>
                }
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <!-- Page level plugins -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });
    </script>
}