@model ProductSlider
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-4 col-md-12">
            <div class="w-100">
                <div class="form-group">
                    <label class="custom-file-upload " style="margin-top: 10px;text-align:center;margin-left:200px;display: inline-block;padding: 4px 20px;cursor: pointer;background: rgb(202, 197, 197); color:black">Dosya Seçin
                          <input type="file" asp-for="PhotoUrl" id="fileInput" accept="image/*" name="Photo" style="display:none">
                    </label>
                </div>
                <div class="form-group ml-5">
                   <img id="uploadedImage" style="max-width: 100%; max-height: 300px;">
                </div>
            </div>
        </div>
        <div class="col-lg-8 col-md-12">
            <div class="bagqraund">
                <div class="container">
                    <div class="col-12">
                        <div class="form-group">
                             <label asp-for="Title" class="form-label"></label>
                                   <input class="form-control" asp-for="Title" />
                             <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                    </div>
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                          <textarea class="form-control" asp-for="Description"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-info m-2" />
                </div>
            </div>
        </div>
            </div>
        </div>
</div>
</form>
@section Scripts{
    <script>
        const fileInput = document.getElementById('fileInput');
        const uploadedImage = document.getElementById('uploadedImage');
        fileInput.addEventListener('change', function (event) {
            const selectedFile = event.target.files[0];
            if (selectedFile) {
                uploadedImage.src = URL.createObjectURL(selectedFile);
            }
        });
    </script>
}
